<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.example.muhyiddin878.gastricdiseasediagnosis.StartActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ganti"
            android:src="@drawable/add"

            />


        <TextView
            android:layout_below="@+id/ganti"
            android:layout_width="wrap_content"
            android:textColor="@color/cyan"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/tampilnama"
            android:text=""


            />

        <TextView
            android:layout_below="@+id/tampilnama"
            android:textColor="@color/cyan"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tampilusia"
            android:text=""

            />




        <ImageButton
            android:id="@+id/tombolstart"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/lambung2"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:onClick="mulaiAnimasiFadein"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KLIK GAMBAR UNTUK MEMULAI"
            android:textAlignment="center"
            android:layout_marginTop="420dp"
            android:fontFamily="fantasy"
            android:textColor="#ffff"
            />

    </RelativeLayout>

</LinearLayout>
